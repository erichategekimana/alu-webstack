global
    daemon
    maxconn 256
    ssl-default-bind-options no-sslv3
    ssl-default-bind-ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384

defaults
    mode http
    timeout connect 5000ms
    timeout client 50000ms
    timeout server 50000ms

frontend http-in
    bind *:80
    redirect scheme https code 301 if !{ ssl_fc }

frontend https-in
    bind *:443 ssl crt /etc/letsencrypt/live/www.erictecj.tech/haproxy.pem
    default_backend webservers

backend webservers
    balance roundrobin
    server web-01 98.94.26.92:80 check
    server web-02 44.202.150.153:80 check
